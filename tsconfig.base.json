{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@pos/back-office": ["libs/back-office/src/index.ts"],
      "@pos/models": ["libs/models/src/index.ts"],
      "@pos/sales": ["libs/sales/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
